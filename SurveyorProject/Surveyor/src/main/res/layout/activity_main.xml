<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#d6d8d9"
    android:clickable="false"
    android:focusableInTouchMode="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Survey your land  easily  with "
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:textSize="25dp"
        android:textColor="#7a66b8"
        android:id="@+id/textView2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER NAME"
            android:textSize="20dp"
            android:gravity="top"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView3"
            android:layout_marginBottom="17dp"
            android:layout_above="@+id/textView"
            android:layout_alignLeft="@+id/textView2"
            android:textColor="#535551"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView3"
            android:textColor="#535551"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:background="#fdf7f5"
            android:textSize="22dp"
            android:layout_alignParentEnd="false"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignLeft="@+id/editText"
            android:layout_below="@+id/textView3"
            android:background="#fffbf9"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:id="@+id/log_btn"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Not a member ?   Register"
            android:id="@+id/textView4"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/log_btn"
            android:layout_alignRight="@+id/editText2"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Here  "
            android:id="@+id/button"
            android:background="#cf86ab"
            android:textSize="22dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_marginTop="-10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-SURVEY"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@android:string/VideoView_error_button"/>

</RelativeLayout>
