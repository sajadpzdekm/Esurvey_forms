<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#9d9db7">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to E-SURVEY system"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#a07c55"
            android:textIsSelectable="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

    <TextClock
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp"/>

    <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Check out duties"
            android:id="@+id/check_btn"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>
    <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Previous results data"
            android:id="@+id/result_btn"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>

    <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Go to survey"
            android:id="@+id/survey_btn"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>
    <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:id="@+id/logout_btn"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>


</LinearLayout>