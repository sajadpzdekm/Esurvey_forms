<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#a6b882">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to E-SURVEY system"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#8769b8"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name "
            android:id="@+id/textView2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:textIsSelectable="false"
            android:textSize="22dp"/>

    <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/client_name"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-20dp"
            android:background="#ebe7e4"
            android:textSize="22dp"
            android:layout_marginRight="-43dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            android:id="@+id/textView3"
            android:layout_gravity="center_vertical"
            android:textSize="22dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

    <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/client_place"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-25dp"
            android:background="#ebe7e4"
            android:textSize="22dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:id="@+id/textView4"
            android:layout_gravity="left|center_vertical"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/client_address"
            android:layout_gravity="center"
            android:background="#ebe7e4"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:id="@+id/textView5"
            android:layout_gravity="left|center_vertical"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

    <EditText
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/client_mob"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:background="#ebe7e4"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="-27dp"
            android:layout_marginTop="-25dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:id="@+id/textView6"
            android:layout_gravity="left|center_vertical"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

    <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/client_username"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:background="#ebe7e4"
            android:layout_marginTop="-25dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/textView7"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="22dp"/>

    <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/client_password"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:background="#ebe7e4"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-28dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/client_reg_btn"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"/>
</LinearLayout>